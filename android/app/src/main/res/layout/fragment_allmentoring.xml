<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">
        <EditText
            android:id="@+id/tab1_searchEditTv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="맨토링 명으로 검색"
            android:layout_toLeftOf="@+id/tab1_spinner"
            android:layout_centerVertical="true"
            android:background="@drawable/solid_search_orange"
            android:textSize="13dp"
            android:paddingLeft="13dp"
            android:paddingRight="8dp"
            android:drawableRight="@drawable/ic_search"
            android:drawableTint="@color/colorPrimary"
            android:maxLines="1"/>

        <Spinner
            android:id="@+id/tab1_spinner"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/line_bottom_orange"
            android:entries="@array/lecture_sort"
            android:spinnerMode="dialog"></Spinner>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tab1_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>